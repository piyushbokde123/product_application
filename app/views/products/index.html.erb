<div lass="container-fluid"> 
  <h1 class="mx-auto" style="width: 20rem;">Products</h1>
</div>

<style>
  .bd-example{
    padding: 1.5rem;
    margin-right: 0;
    margin-left: 0;
    border-width: 1px;
    border-top-left-radius: 0.25rem;
    border-top-right-radius: 0.25rem;
  }
</style>
<% flash.each do |type, msg| %>
  <div class="mx-auto" style="width: 30rem;">
    <%= msg %>
  </div>
<% end %>
<div class="mx-auto" style="width: 110rem; class=""> 
  <%= button_to "New Product", new_product_path, method: :get %>
</div>
<div class="bd-example">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Company</th>
        <th scope="col">Quantity</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.company %></td>
        <td><%= product.quantity %></td>
        <td class="d-flex gap-2">
          <%= button_to "Edit", edit_product_path(product), method: :get %> 
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>



